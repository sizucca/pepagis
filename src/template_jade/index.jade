doctype html
html.pepagis-html(lang='ja' prefix='og: http://ogp.me/ns#')
  head
    meta(charset='utf-8')
    title #{config.name}
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    meta(name='format-detection', content='telephone=no')

    link(href=root + 'assets/stylesheets/application.css', rel='stylesheet')
    link(href=root + 'assets/stylesheets/highlight/prism.css', rel='stylesheet')
    link(href=root + 'assets/framework/stylesheets/application.css', rel='stylesheet')

    link(href='//fonts.googleapis.com/css?family=Roboto:400,300,500,700', rel='stylesheet')
    link(rel='shortcut icon', href=root + 'assets/favicon.ico', type='image/vnd.microsoft.icon')
    link(rel='icon', href=root + 'assets/favicon.ico', type='image/vnd.microsoft.icon')

    script(src='//code.jquery.com/jquery-2.2.0.min.js')
    script(src=root + 'assets/javascripts/application.js')

    meta(property='og:title' content='Pepagis')
    meta(property='og:type' content='article')
    meta(property='og:url' content='https://sizucca.github.io/pepagis/')
    meta(property='og:image' content='https://sizucca.github.io/pepagis/assets/images/pepagis_img.png')

  body.pepagis-body
    .pepagis-contents.pepagis-clearfix
      .pepagis-contents__main
        include ./_contents-main
        footer.pepagis-footer.pepagis-reset
          | Last update at #{timestamp}
      .pepagis-contents__side.pepagis-reset
        include ./_contents-side
      .pepagis-contents__shadow

